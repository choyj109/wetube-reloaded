extends base

block content 
    div
        video#preview 
        button#startBtn Start Recording
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file", accept="video/*", required, id="video", name="video")
        input(name="title",placeholder="Title", required, type="text", maxlength=20)
        input(name="description",placeholder="Description", required, type="text", minlength=10)
        input(name="hashtags",placeholder="Hashtags", required, type="text")
        input(value="Upload Video", type="submit")

block scripts 
    script(src="/static/js/recorder.js")